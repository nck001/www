<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="com.tenderslanka.app" version="1.0.1">
  <name>Tenders.lk</name>
  <description>All the tender notices in Sri Lanka</description>
  <author href="http://www.nisalchamara.com" email="nisalchamara@gmail.com">Nisal Karunathilaka</author>
  <content src="index.html"/>
  <preference name="permissions" value="none"/>
  <preference name="orientation" value="default"/>
  <preference name="target-device" value="universal"/>
  <preference name="fullscreen" value="true"/>
  <preference name="webviewbounce" value="true"/>
  <preference name="prerendered-icon" value="true"/>
  <preference name="stay-in-webview" value="false"/>
  <preference name="ios-statusbarstyle" value="black-opaque"/>
  <preference name="detect-data-types" value="true"/>
  <preference name="exit-on-suspend" value="false"/>
  <preference name="show-splash-screen-spinner" value="true"/>
  <preference name="auto-hide-splash-screen" value="true"/>
  <preference name="disable-cursor" value="false"/>
  <preference name="android-minSdkVersion" value="14"/>
  <preference name="android-installLocation" value="auto"/>
  <gap:plugin name="org.apache.cordova.battery-status" source="npm"/>
  <gap:plugin name="org.apache.cordova.inappbrowser" source="npm"/>
  <gap:plugin name="org.apache.cordova.splashscreen" source="npm"/>
  <gap:plugin name="cordova-plugin-whitelist" source="npm" />
  <gap:platform name="ios" />
  <gap:platform name="android" />
  <gap:platform name="webos" />
  <gap:platform name="symbian" />
  <gap:platform name="blackberry" />
  <gap:platform name="winphone" />
  <icon src="icon.png"/>
  <access origin="*"/>
  <access origin="http://phonegap.com" subdomains="true" />
  <plugin name="cordova-plugin-whitelist" version="1"/>
  <allow-intent href="http://*/*"/>
  <allow-intent href="https://*/*"/>
  <allow-intent href="tel:*"/>
  <allow-intent href="sms:*"/>
  <allow-intent href="mailto:*"/>
  <allow-intent href="geo:*"/>
  <platform name="android">
    <allow-intent href="market:*"/>
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*"/>
    <allow-intent href="itms-apps:*"/>
    <icon   src="icon/ios/icon.png"                         platform="ios" width="57"   height="57" />
    <icon   src="icon/ios/icon@2x.png"                      platform="ios" width="114"  height="114" />
    <icon   src="icon/ios/icon-40.png"                      platform="ios" width="40"   height="40" />
    <icon   src="icon/ios/icon-40@2x.png"                   platform="ios" width="80"   height="80" />
    <icon   src="icon/ios/icon-50.png"                      platform="ios" width="50"   height="50" />
    <icon   src="icon/ios/icon-50@2x.png"                   platform="ios" width="100"  height="100" />
    <icon   src="icon/ios/icon-60.png"                      platform="ios" width="60"   height="60" />
    <icon   src="icon/ios/icon-60@2x.png"                   platform="ios" width="120"  height="120" />
    <icon   src="icon/ios/icon-60@3x.png"                   platform="ios" width="180"  height="180" />
    <icon   src="icon/ios/icon-72.png"                      platform="ios" width="72"   height="72" />
    <icon   src="icon/ios/icon-72@2x.png"                   platform="ios" width="144"  height="144" />
    <icon   src="icon/ios/icon-76.png"                      platform="ios" width="76"   height="76" />
    <icon   src="icon/ios/icon-76@2x.png"                   platform="ios" width="152"  height="152" />
    <icon   src="icon/ios/icon-small.png"                   platform="ios" width="29"   height="29" />
    <icon   src="icon/ios/icon-small@2x.png"                platform="ios" width="58"   height="58" />
    <icon   src="icon/ios/icon-small@3x.png"                platform="ios" width="87"   height="87" />
  </platform>
</widget>
